import sys, getopt
import urllib, urllib2
import argparse



bot_id  = "<%= @bot_id %>"
chat_critical = <%= @critical_chat_id %>
chat_generic  = <%= @chat_id %>

emoji_map = {
    "ok": "âœ…",
    "problem": "â—",
    "info": "â„¹ï¸",
    "warning": "âš ï¸",
    "disaster": "âŒ",
    "bomb": "ğŸ’£",
    "fire": "ğŸ”¥",
